<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="LoanCardLayout">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin_small_spacing</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin_small_spacing</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">@dimen/med_elevation</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin_small_spacing
        </item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin_small_spacing</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin_small_spacing
        </item>
    </style>

    <style name="LoanProviderTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomSheetDialogHeaderText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BottomSheetDialogLabelText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">4sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BottomSheetDialogValueText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">4sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AmountTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="LoanNameTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="LabelTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AddNewLoanText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="AddNewLoanText.Title">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AddNewLoanText.Label">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AddNewLoanText.EditText">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/hintColor</item>
    </style>

</resources>
