<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin_small_spacing"
    android:layout_marginEnd="@dimen/activity_horizontal_margin_small_spacing"
    android:layout_marginStart="@dimen/activity_horizontal_margin_small_spacing"
    android:layout_marginTop="@dimen/activity_vertical_margin_small_spacing"
    android:background="@color/backgroundColor"
    android:elevation="@dimen/med_elevation"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="-12dp"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

</LinearLayout>